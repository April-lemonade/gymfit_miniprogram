.container {
  /* margin: 3%; */
  display: flex;
  flex-direction: column;
}

.calander {
  margin: 3%;
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 35rpx;
}

.week {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.foodRec {
  margin: 3%;
  /* background-color: rgb(203, 215, 236); */
  border-radius: 10rpx;
  margin-top: 5%;
  display: flex;
  flex-direction: column;
  margin-bottom: 2%;
}

.top {
  display: flex;
  flex-direction: row;
}

.left {
  width: 45%;
  border-radius: 0 20rpx 20rpx 0;
  margin-bottom: 2%;
  /* background-color: skyblue; */
  margin-top: 2%;
  color: white;
}

.right {
  justify-content: center;
  width: 35%;
  margin-top: 2%;
  margin-bottom: 2%;
  margin-left: 15%;
  color: white;
  /* background-color: skyblue; */
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
}

.content {
  width: 100%;
  margin-bottom: 5%;
  display: flex;
  flex-direction: row;
}

.each {
  width: 25%;
  display: flex;
  text-align: center;
  flex-direction: column;
  margin: 1%;
}

.btn {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 2%;
}

.subtitles {
  justify-self: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
}

.subtitle{
margin: 2%;
}

.recordlist {
  display: flex;
  margin: 3%;
  flex-direction: column;

}

.col{
	overflow:hidden;
	margin-bottom:0;
	/* background:#f0eff5; */
	width:100%;
	position:fixed;
	bottom:48px;
  display:flex;
}

.block{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
