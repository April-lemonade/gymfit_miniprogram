.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* margin: 5%; */
}

.rows {
  margin-left: 3%;
  margin-right: 3%;
  display: flex;
  flex-direction: row;
  width: 94%;
  justify-content: space-between;
}

.time {
  font-weight: bold;
  font-size: 40rpx;
  margin-right: 5%;
}

view .van-field__control {
  background-color: rgb(240, 240, 240);
  border: 0;
  border-radius: 5px;
  box-sizing: border-box;
  color: var(--field-input-text-color,#323233);
  display: none;
  height: var(--cell-line-height,24px);
  line-height: inherit;
  margin: 0;
  min-height: var(--cell-line-height,24px);
  padding: 0;
  position: relative;
  resize: none;
  text-align: center;
  width: 100%;
}